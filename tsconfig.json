{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "outDir": "build",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019"
    ],
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "strict": true,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src",
    "tests"
  ],
  "compileOnSave": true,
}
